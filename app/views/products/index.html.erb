<div class="container">  
  <div class="table-responsive">
    <h1 class="text-danger text-center"><span class="glyphicon glyphicon-th-list"></span> Productos en Stock</h1>
    <table class="table table-striped table-bordered">
      <thead>
        <tr style="background: #333; color: #fff;">
          <th>CODE</th>
          <th>NOMBRE</th>
          <th>DESCRIPCION</th>
          <th class="text-center">PRECIO</th>
          <th class="text-center">ELIMINAR</th>
          <th>EDITAR</th>
        </tr>
      </thead>
      <tbody>
      <% total = 0 %>
        <% @products.each do |product| %>
        
      <% total += product.price.to_i %>
        <tr>
          <td> <%= link_to product.id, product_path(product) %></td>
         <td><%= product.name %> </td>
          <td><%= product.description %></td>
          <td class="text-right"> $ <%= product.price.to_i %></td>
          <td class="text-center"> <%= link_to " Editar", product_path(product), :data => {:confirm => "¿Estas Seguro?",:method => "edit"}, class: 'glyphicon glyphicon-cog btn btn-primary'%>
          </td>
          <td class="text-center"><%= link_to " Eliminar", product_path(product), :data => {:confirm => "¿Estas Seguro?",:method => "delete"}, class: 'glyphicon glyphicon-trash btn btn-danger'%>           
          </td>  
        </tr>
        <% end %>
       <tr class="info">
        <td class="text-right"><strong># PRODUCTOS: </strong></td>
        <td><strong> <%= @products.count %></strong> </td>
        <td></td>
        <td class="text-right primary" active"><b>$ <%= total %></b> </td>
        <td></td>
        <td></td>
      </tr>
        </tbody>
      </table>
  </div>
</div>
